<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nattlivet.nattlivet" version="0.0.2" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nattlivet</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="hi@nattlivet.club" href="https://nattlivet.club">
        Nattlivet
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <universal-links>
        <host name="app.nattlivet.club" scheme="https" />
        <host name="auth.nattlivet.club" scheme="https" />
        <host name="nattlivet.page.link" scheme="https" />
        <host name="nattlivet-91516.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback"/>
            <path url="/__/auth/handler"/>
        </host>
    </universal-links>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidLaunchMode" value="singleTask" />
        <preference name="xwalk64bit" value="true" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="28"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AllowInlineMediaPlayback" value="true"/>
    <preference name="OverrideUserAgent" value="Mozilla/5.0 Google" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="IconSource" value="www/appicon.png"/>
    <preference name="IconBackgroundColor" value="#333333"/>
    <hook type="after_prepare" src="node_modules/generate-cordova-assets/hook.js"/>
</widget>
